<div class="admin_layout_container">
    <div class="admin_layout_body">
        <!-- {{{content}}} -->

        <body>
            <div class="container-fluid" id="align-table">
                <form action="/admin/transaction/search" id="" method="GET">
                    <div class="menu">
                        <h2>Transaction ({{pendlist.length}}) </h2>
                        <div class="float-item">
                            <div>
                                <label for="type">Choose type of transaction:</label>
                                <select name="type">
                                    <option value="withdraw">Withdraw</option>
                                    <option value="transfer">Transfer</option>
                                </select>
                            </div>
                            <label>From: </label>
                            <input type="date" name="from" value="">
                            <label>To: </label>
                            <input type="date" name="to" value="">
                            <button type="submit" class="btn btn-basic"><span class="glyphicon glyphicon-filter"></span>
                                Search</button>
                            <button type="button" class="btn btn-success" onclick="window.location.reload()"><span
                                    class="glyphicon glyphicon-refresh"></span> Refresh</button>
                        </div>
                    </div>
                </form>
                <table class="table table-responsible">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Transaction Type</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    {{#each pendlist}}
                    <tbody>
                        <tr>
                            <td>
                                {{dateFormat date}}
                            </td>
                            <td>
                                {{#eq type "withdraw"}}
                                Withdraw
                                {{/eq }}
                                {{#eq type "transfer"}}
                                Transfer
                                {{/eq }}
                            </td>
                            <td>
                                {{currencyFormat amount ' Ä‘'}}
                            <td>
                                {{#eq status "pending"}}
                                <button type="button" class="btn btn-warning"
                                    name="status"><strong>Pending</strong></button>
                                {{/eq}}
                            </td>
                            <td>
                                <a href="/admin/transdetail/{{_id}}"><button type="button" class="btn btn-info"
                                        name="details">Details</button></a>
                            </td>
                        <tr>
                    </tbody>
                    {{/each}}
                </table>
                <p>Total number of transaction: <strong class="text-danger">{{pendlist.length}}</strong></p>
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-center">
                        {{#paginate pagination type="first"}}
                        <li {{#if disabled}} class="disabled" {{/if}}><a href="?page={{n}}">First</a></li>
                        {{/paginate}}

                        {{#paginate pagination type="previous"}}
                        <li {{#if disabled}} class="disabled" {{/if}}><a href="?page={{n}}">Prev</a></li>
                        {{/paginate}}
                        {{#paginate pagination type="middle" limit=pagination.pageCount}}
                        <li {{#if active}} class="active" {{/if}}><a href="?page={{n}}">{{n}}</a></li>
                        {{/paginate}}

                        {{#paginate pagination type="next"}}
                        <li {{#if disabled}} class="disabled" {{/if}}><a href="?page={{n}}">Next</a></li>
                        {{/paginate}}

                        {{#paginate pagination type="last"}}
                        <li {{#if disabled}}class="disabled" {{/if}}><a href="?page={{n}}">Last</a></li>
                        {{/paginate}}
                    </ul>
                </nav>
            </div>
        </body>
    </div>
</div>

</body>