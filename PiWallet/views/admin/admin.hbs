<div class="admin_layout_container">
  <div class="admin_layout_body">
    <!-- {{{content}}} -->

    <body>
      <div class="container-fluid" id="align-table">
        <form action="/admin/search" id="" method="GET">
          <div class="menu">
            <h2>User Account List ({{userList.length}}) </h2>
            <div class="float-item">
              <label>Email: </label>
              <input type="text" name="email" value="">
              <button type="submit" class="btn btn-basic"><span class="glyphicon glyphicon-filter"></span>
                Search</button>
              <button type="button" class="btn btn-success" onclick="window.location.reload()"><span
                  class="glyphicon glyphicon-refresh"></span> Refresh</button>
            </div>
          </div>
        </form>
        <table class="table table-responsible">
          <thead>
            <tr>
              <th>ID</th>
              <th>Full Name</th>
              <th>Email</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
          {{#each userList}}
          <tbody>
            <tr>
              <td>
                {{_id}}
              </td>
              <td>
                {{full_name}}
              </td>
              <td>
                {{email}}
              <td>
                {{#eq status "unapproved"}}
                <button type="button" class="btn btn-warning" name="status"><strong>Pending</strong></button>
                {{/eq }}
                {{#eq status "waiting"}}
                <button type="button" class="btn btn-warning" name="status"><strong>Pending</strong></button>
                {{/eq }}
                {{#eq status "locked"}}
                <button type="button" class="btn btn-light" name="status"><strong>Locked</strong></button>
                {{/eq }}
                {{#eq status "disabled"}}
                <button type="button" class="btn btn-danger" name="status"><strong>Disabled</strong></button>
                {{/eq }}
                {{#eq status "approved"}}
                <button type="button" class="btn btn-success" name="status"><strong>Active</strong></button>
                {{/eq }}
              </td>
              <td>
                <a href="/admin/detail/{{_id}}">
                  <button id="detail" type="button" class="btn btn-info btn-detail" name="details">Details</button>
                </a>
              </td>
            <tr>
          </tbody>
          {{/each}}
        </table>
        <p>Total number of users: <strong class="text-danger">{{userList.length}}</strong></p>
        <nav aria-label="Page navigation example">
          <ul class="pagination justify-content-center">
            {{#paginate pagination type="first"}}
            <li {{#if disabled}} class="disabled" {{/if}}><a href="?page={{n}}">First</a></li>
            {{/paginate}}

            {{#paginate pagination type="previous"}}
            <li {{#if disabled}} class="disabled" {{/if}}><a href="?page={{n}}">Prev</a></li>
            {{/paginate}}
            {{#paginate pagination type="middle" limit=pagination.pageCount}}
            <li {{#if active}} class="active" {{/if}}><a href="?page={{n}}">{{n}}</a></li>
            {{/paginate}}

            {{#paginate pagination type="next"}}
            <li {{#if disabled}} class="disabled" {{/if}}><a href="?page={{n}}">Next</a></li>
            {{/paginate}}

            {{#paginate pagination type="last"}}
            <li {{#if disabled}}class="disabled" {{/if}}><a href="?page={{n}}">Last</a></li>
            {{/paginate}}
          </ul>
        </nav>
      </div>
    </body>
  </div>
</div>
</body>