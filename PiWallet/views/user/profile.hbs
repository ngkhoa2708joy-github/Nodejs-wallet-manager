<body>
    <div id="snippetContent">
        <form enctype="multipart/form-data" action="" method="POST">
            <div class="container">
                <div class="row gutters">
                    <div class="col">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="row gutters">
                                    <h1>Profile</h1>
                                    <div class="col"><br>
                                        <button type="button" class="btn btn-dark" onclick="goBack()" name="goback">Go
                                            Back</button>
                                        <div class="form-group">
                                            <label for="userId">User ID<span style="color: red;">*</span></label>
                                            <input type="text" class="form-control" name="userId"
                                                value="{{profile._id}}" readonly="">
                                        </div>
                                        <div class="form-group">
                                            <label for="userId">Account<span style="color: red;">*</span></label>
                                            <input type="text" class="form-control" name="userId" value="{{username}}"
                                                readonly="">
                                        </div>
                                        <div class="form-group">
                                            <label for="fullName">Full Name</label>
                                            <input type="text" class="form-control" value="{{profile.full_name}}"
                                                name="fullName" readonly="">
                                        </div>

                                        <div class="form-group">
                                            <label for="address">Address</label>
                                            <input type="text" class="form-control" value="{{profile.address}}"
                                                name="address" readonly="">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="phone">Phone Number</label>
                                            <input type="number" class="form-control" value="{{profile.phone}}"
                                                name="phone" readonly="">
                                        </div>
                                        <div class="form-group">
                                            <label for="email">Email</label>
                                            <input type="email" class="form-control" value="{{profile.email}}"
                                                name="email" readonly="">
                                        </div>
                                        <div class="form-group">
                                            <label>Date of Birth</label>
                                            <input type="text" class="form-control" value="{{dateFormat profile.dob}}"
                                                name="dob" readonly="">
                                        </div>
                                        <div class="form-group">
                                            <label>Balance</label>
                                            <input type="text" class="form-control"
                                                value="{{currencyFormat profile.balance " Ä‘"}}" name="balance"
                                                readonly="">
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="frontId">Front ID Card</label>
                                            <img src="{{profile.idfront}}" alt="Front ID Card" width="300" height="200">
                                        </div>
                                        <div class="form-group">
                                            <label for="backId">Back ID Card</label>
                                            <img src="{{profile.idback}}" alt="Back ID Card" width="300" height="200">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Account Status:
                                        {{#eq profile.status "approved"}}
                                        <td><button class="btn btn-success"><strong>Active</strong></button></td>
                                        {{/eq }}
                                        {{#eq profile.status "unapproved"}}
                                        <td><button name="unapproved" type="button"
                                                class="btn btn-warning"><strong>Unapproved</strong></button></td>
                                        {{/eq }}
                                        {{#eq profile.status "waiting"}}
                                        <td><button name="waiting" type="button" class="btn btn-warning">
                                                <stong>Wait for
                                                    update</stong>
                                            </button></td>
                                        {{/eq }}
                                    </label>
                                </div>
                                <div class="form-group">
                                    <div class="container text-center">
                                        <td>
                                            {{#eq profile.status "waiting"}}
                                            <a href="/update_id"><button type="button" class="btn btn-primary btn-send"
                                                    name="complementary">Update ID Picture</button></a>
                                            {{/eq }}
                                        </td>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </form>
    </div>